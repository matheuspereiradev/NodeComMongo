<h1>Postagens da categoria {{categoria.nome}}</h1>
<hr><br>
{{#each postagens}}

<div class="list-group mt-2">
  <div class="list-group-item list-group-item-action flex-column align-items-start">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1 font-weight-bold">{{titulo}}</h5>
      <small>{{data}}</small>
    </div>
    <p class="mb-1 font-weight-normal">{{descricao}}</p>
    <a href="/postagem/ler/{{slug}}" class="text-decoration-none"><button class="btn btn-success">Ler mais</button></a>
    <hr>
    <small>slug: {{slug}}</small>
  </div>
</div>

{{else}}
<h5>Não há postagens</h5>
{{/each}}
