{{#each erros}}
    <div class="alert alert-danger" role="alert">
        {{texto}}
    </div>
{{/each}}

<h3>Cadastre-se agora:</h3>

<form method="POST" name="formulario" action="/usuarios/salvarcadastro">
    <label for="nome">Nome:</label>
    <input type="text" id="nome" name="nome" placeholder="digite o nome" class="form-control">
    <label for="email">Email:</label>
    <input type="text" id="email" name="email" placeholder="digite o email" class="form-control">
    <label for="senha">Senha:</label>
    <input type="password" id="senha" name="senha" class="form-control">
    <label for="senha2">Digite novamente sua senha:</label>
    <input type="password" id="senha2" name="senha2" class="form-control">
    <br>
    <input type="submit" id="enviar" name="enviar" value="Salvar" class="btn btn-success btn-lg btn-block">
</form>