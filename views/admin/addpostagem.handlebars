{{#each erros}}
    <div class="alert alert-danger" role="alert">
        {{texto}}
    </div>
{{/each}}
<h3>Nova postagem:</h3>

<form method="POST" name="formulario" action="/admin/postagens/nova">
    <label for="titulo">Titulo:</label>
    <input type="text" id="titulo" name="titulo" placeholder="digite o titulo" class="form-control">

    <label for="slug">Slug:</label>
    <input type="text" id="slug" name="slug" placeholder="digite o slug" class="form-control">

    <label for="descricao">Descrição:</label>
    <input type="text" id="descricao" name="descricao" placeholder="digite a descrição" class="form-control">

    <label for="conteudo">Conteudo:</label>
    <textarea class="form-control" id="conteudo" name="conteudo" rows="6"></textarea>

    <label for="categoria">Categoria:</label>
    <select class="form-control">

        {{#each categorias}}
            <option value="{{_id}}">{{nome}}</option>
        {{else}}
             <option value="0">Nenhuma categoria cadastrada</option>   
        {{/each}}    
    </select>

    <input type="submit" id="enviar" name="enviar" value="Postar" class="btn btn-success btn-lg btn-block mt-4">
</form>
